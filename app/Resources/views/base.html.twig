<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>!nstant | {% block title %}{% trans %}Welcome{% endtrans %}!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
     <div id="container">
      <div id="header">
        {% if is_granted("IS_AUTHENTICATED_FULLY") %}
          <div id="user_info">
            <div class="tweet_image">
              <a href="http://twitter.com/{{ app.security.token.user.twitterUsername }}" title="{{ app.security.token.user.twitterRealname }}"><img src="{{ app.security.token.user.profileImageUrl }}" width="48" height="48"></a>
            </div>
            <div class="text">
              <a href="{{ path('account_settings') }}">{{app.security.token.user.twitterUsername}} ({{app.security.token.user.twitterRealname}})</a><a href="{{ path('cosa_instant_user_logout') }}" class="logout">{% trans %} Logout {% endtrans %}</a>
            </div>
            <div id="email_edit">{# render(controller('CosaInstantUserBundle:Default:setEmailSmall')) #}</div>
            <span class="clearb"></span>
          </div>
        {% endif %}
      </div>
      <div id="body">
        <div id="flash-messages">
          <script type="text/javascript">
            {% for flashMessage in app.session.flashbag.get('notice') %}
              $('#flash-messages').append('<div class="flash-message flash-notice">{{ flashMessage }}</div>');
              msg.delay(3000).fadeOut(1000);
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('warning') %}
              $('#flash-messages').append('<div class="flash-message flash-warning">{{ flashMessage }}</div>');
              msg.delay(3000).fadeOut(1000);
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
              $('#flash-messages').append('<div class="flash-message flash-error">{{ flashMessage }}</div>');
              msg.delay(3000).fadeOut(1000);
            {% endfor %}
          </script>
         </div>
         {% block body %}{% endblock %}
       </div>
       <div id="footer">
         <ul>
           <li><a href="{{ path('homepage') }}">{% trans %} Home {% endtrans %}</a></li>
           <li><a href="{{ path('about') }}">{% trans %} About {% endtrans %}</a></li>
           <li><a href="{{ path('who_we_are') }}">{% trans %} Who we are {% endtrans %}</a></li>
         </ul> 
       </div>
       <script src="{{ asset('js/jquery-1.11.0.min.js') }}"></script>
       {% block javascripts %}{% endblock %}
     </div>
    </body>
</html>
