{% extends "base.html.twig" %}

{% block body %}
<div class="container">
  <div class="row" style="margin-top:50px; margin-right:15px; margin-left:-10px;">
    <div class="col-md-7">
      <div class="well">
        <form action="{{ path('account_settings') }}" method="post" {{ form_enctype(form) }}>
          {% trans %} account.email {% endtrans %}
          {{ form_errors(form.email) }}
          {{ form_widget(form.email, { 'attr': {'class': 'conf-contact'} }) }}
          <br/>
          {% trans %} account.optin {% endtrans %}
          {{ form_errors(form.optin) }}
          {{ form_widget(form.optin) }}
          <br/>
          {{ form_widget(form._token) }}
          <br/>
          <p>
            <button type="submit">{% trans %} account.save {% endtrans %}</button>
            <img id="ajax-loader" src="{{ asset('images/ajax-loader.gif') }}" alt="loading..." style="margin-left: 10px; visibility: hidden;"/>
          </p>
        </form>
      </div>
    </div>
  </div>
</div>

{% include "::footer.html.twig" %}

{% endblock %}
