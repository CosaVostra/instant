{% if draggable %}<div class="twitter_result_item ui-widget-content">{% endif %}
  <div class="tweet">
    <div class="tweet_content">
      <div class="tweet_id hidden">{{ tweet.id_str }}</div>
      <div class="tweet_image">
        <a href="http://twitter.com/{{ tweet.user.screen_name }}" title="{{ tweet.user.name }}"><img src="{{ tweet.user.profile_image_url }}" width="48" height="48"></a>
      </div>
      <div class="tweet_right">
        <div class="tweet_screen_name">
          <a href="http://twitter.com/{{ tweet.user.screen_name }}" title="{{ tweet.user.name }}">{{ tweet.user.screen_name }}</a>
          <span class="tweet_name">{{ tweet.user.name }}</span>
          <input type="hidden" class="twitterID" value="{{ tweet.user.id_str }}"/>
          <input type="hidden" class="twitter_username" value="{{ tweet.user.screen_name }}"/>
          <input type="hidden" class="twitter_realname" value="{{ tweet.user.name }}"/>
          <input type="hidden" class="twitter_profile_image_url" value="{{ tweet.user.profile_image_url }}"/>
        </div>
        <div class="tweet_text">{{ tweet.text }}
          <div class="tweet_date">
            <a href="http://twitter.com/{{ tweet.user.screen_name }}/status/{{ tweet.id_str }}" >{{ tweet.created_at|date("m/d/Y H:i:s") }}</a>
          </div>
        </div>
        {% if tweet.entities.media is defined %}
          <div class="tweet_media">
            <a href="{{ tweet.entities.media.0.media_url }}" target="_blank"><img src="{{ tweet.entities.media.0.media_url }}" width="100%" height="auto"/></a>
          </div>
          <input type="hidden" class="twitter_media_url" value="{{ tweet.entities.media.0.media_url }}"/>
        {% endif %}
      </div>
    </div>
    <input type="hidden" class="twitter_id_str" value="{{ tweet.id_str }}"/>
    <input type="hidden" class="twitter_text" value="{{ tweet.text }}"/>
    <input type="hidden" class="twitter_location" value=""/>
    <input type="hidden" class="twitter_created_at" value="{{ tweet.created_at|date("m/d/Y H:i:s", "Europe/Paris") }}"/>
  </div>
{% if draggable %}</div>{% endif %}
