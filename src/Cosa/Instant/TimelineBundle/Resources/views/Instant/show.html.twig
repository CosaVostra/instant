{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Instant</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Finish_at</th>
                <td>{{ entity.finishat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Nb_views</th>
                <td>{{ entity.nbviews }}</td>
            </tr>
            <tr>
                <th>Last_view</th>
                <td>{{ entity.lastview|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Lang</th>
                <td>{{ entity.lang }}</td>
            </tr>
            <tr>
                <th>Message_type</th>
                <td>{{ entity.messagetype }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('instant') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('instant_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('instant_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
