{% extends '::base.html.twig' %}

{% block body -%}
    <button onclick="document.location.href='{{ path('instant_new', {'username': user.twitterUsername}) }}';">Create a new instant</button>

    <table class="records_list" style="width:100%;">
        {% for entity in entities %}
            <tr>
                <!--<td><a href="{# path('instant_view', { 'username': user.username, 'instant_title': entity.title }) #}">{{ entity.id }}</a></td>-->
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
           <!--     <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.finishat %}{{ entity.finishat|date('Y-m-d H:i:s') }}{% endif %}</td>-->
                <td>{{ entity.status }}</td>
                <td>{{ entity.nbviews }}</td>
                <td>{% if entity.lastview %}{{ entity.lastview|date('Y-m-d H:i:s') }}{% endif %}</td>
     <!--           <td>{{ entity.lang }}</td>
                <td>{{ entity.messagetype }}</td>-->
                <td>
                <ul>
                    <li>
                        <button onclick="window.open('{{ path('instant_webview', { 'username': user.twitterUsername,'instant_title': entity.title }) }}','_newtab');">{% trans %}Webview{% endtrans %}</button>
                    </li>
                    <li>
                        <button onclick="document.location.href='{{ path('instant_embed', { 'username': user.twitterUsername,'instant_title': entity.title }) }}';">{% trans %}Embed{% endtrans %}</button>
                    </li>
                    <li>
                        <button onclick="document.location.href='{{ path('instant_edit', { 'username': user.twitterUsername,'instant_title': entity.title }) }}';">{% trans %}Edit{% endtrans %}</button>
                    </li>
                    <li>
                        <form action="{{ path('instant_delete', { 'username': user.twitterUsername,'instant_title': entity.title }) }}" method="post">
                            <input type="hidden" name="_method" value="DELETE" />
                            {{ form_widget(deleteForms[entity.id]) }}
                            <button type="submit" onclick="return confirm('{% trans %}Are you sure ?{% endtrans %}');">{% trans %}Delete{% endtrans %}</button>
                        </form>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
