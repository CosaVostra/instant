          <p class="title-upper-all"><span class="title-upper">Last published !nstants</span>&nbsp;&nbsp;<span>Sorted by&nbsp;&nbsp;</span><span class="sorting-box"><a href="{{ path('public_instant_list', {'order': 'date_desc'}) }}">date&nbsp;▲</a></span>
  {% endif %}
</p>

<br /><br />
<div class="isotope js-isotope" data-isotope-options='{ "layoutMode": "fitRows", "itemSelector": ".item" }'>
<!-- Twig -->      
{% for entity in entities %}
  <div class="item">
    <div onclick="document.location.href='{{ path('instant_wview', { 'username': entity.user.twitterUsername,'instant_title': entity.urlTitle }) }}';">
      <header>
        <p class="in-boxes"><span class="title-upper">{{ entity.title }}</span></p>
      </header>
  
      <div class="item-article">{{ entity.description }}</div>
      <p class="description" >{{ nbTwittos[entity.id] }} experts - created on {{ entity.createdAt|date('d M Y') }}<br /></p>
    </div>

  </div>

{% endfor %}
</div>

          
