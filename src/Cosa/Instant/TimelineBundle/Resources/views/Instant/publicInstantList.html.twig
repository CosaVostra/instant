{% extends '::base.html.twig' %}

{% block body -%}

  <div class="container">
      <div class="row">
        <div class="col-md-12" style="margin-top:50px;">
        
  {% if app.session.get('public_order')  == 'date_desc' %}
          <p class="title-upper-all"><span class="title-upper">Last published !nstants</span>&nbsp;&nbsp;<span>Sorted by&nbsp;&nbsp;</span><span class="sorting-box"><a href="{{ path('public_instant_list', {'order': 'date_asc'}) }}">date&nbsp;▼</a></span>
